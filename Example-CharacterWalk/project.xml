<project>
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="Example-Character" package="com.plug.Example-Character" version="1.0.0" company="Plug" />
	<android target-sdk-version="19" />
	
	<!-- output -->
	<app main="Main" file="Example-Character" path="bin" />
	
	<window background="#000000" width="800" height="500"/>
	<window vsync="true" hardware="true"/>

	<template path="assets/templates/index.html" rename="index.html" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<source path="../src" />
	
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<!--haxelib name="glue" /-->

