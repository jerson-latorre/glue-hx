<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="GlueTest" package="com.plug.GlueTest" version="1.0.0" company="Plug" />
	<android target-sdk-version="19" />
	
	<!-- output -->
	<app main="Main" file="GlueTest" path="bin" />
	
	<window background="#FF0000" fps="60" />
	<window width="800" height="600" />
	<window orientation="landscape" vsync="true" hardware="true" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="bitmapfont" />
	
	<!-- assets -->
	<icon path="assets/icon.png" />
	<assets path="assets/img" rename="img" />
	<assets path="assets/fonts" rename="fonts" />
	<assets path="assets/data" rename="data" />
	<assets path="assets/sound" rename="sound" include="*.ogg" unless="flash" />
	<assets path="assets/sound" rename="sound" include="*.mp3" if="flash" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>