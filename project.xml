<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="GlueTest" package="com.plug.GlueTest" version="1.0.0" company="Plug" />
	<android target-sdk-version="19" />
	
	<!-- output -->
	<app main="Main" file="GlueTest" path="bin" />
	
	<window background="#000000" width="1080" height="1920"/>
	<window vsync="true" hardware="true" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<!--<haxelib name="nape" />-->
	
	<!-- assets -->
	<!--<icon path="assets/icon.png" />-->
	<assets path="assets/img" rename="img" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
</project>