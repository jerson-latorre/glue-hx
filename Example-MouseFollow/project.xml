<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="Example-MouseFollow" package="com.plug.Example-MouseFollow" version="1.0.0" company="Plug" />
	<android target-sdk-version="19" />
	
	<!-- output -->
	<app main="Main" file="Example-MouseFollow" path="bin" />
	
	<window background="#000000" width="500" height="800"/>
	<window vsync="true" hardware="true"  fps="60"/>
	
	<template path="assets/templates/index.html" rename="index.html" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<source path="../src" />

	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<!--haxelib name="glue" /-->

	<!-- assets -->
	<assets path="assets/images" rename="images" />
	<assets path="assets/fonts" rename="fonts" />
</project>